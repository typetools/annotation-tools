#!/bin/sh

# Insert annotations (from an annotation file) into a Java source file.
# For usage information, run: insert-annotations-to-source --help 
# See the annotation file utilities documentation for more information.

ANNOTATION_FILE_UTILS1=$(dirname $0)/annotation-file-utilities.jar
ANNOTATION_FILE_UTILS2=$(dirname $0)/../annotation-file-utilities.jar

# Needs CLASSPATH to find user files
java -Xbootclasspath/p:${ANNOTATION_FILE_UTILS1}:${ANNOTATION_FILE_UTILS2} -cp ${ANNOTATION_FILE_UTILS1}:${ANNOTATION_FILE_UTILS2}:${CLASSPATH} annotator.Main $@
